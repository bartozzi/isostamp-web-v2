h2 Upload data

== render 'document_upload_form'

.spacer.large

pre= JSON.pretty_generate(@documents.as_json)

/ h2 Uploads In Progress

/ table.table.table-bordered.table-striped: tbody
/   - if @uploading_docs.empty?
/     p You aren't currently uploading any documents.
/   - @uploading_docs.each do |doc|
/     tr
/       td: .grey= doc.filename
/       / td: .grey
/       /   - if doc.kind == 'Parameters'
/       /     i.fa.fa-file-text.right-spacer
/       /   - else
/       /     i.fa.fa-file-code-o.right-spacer
/       /   = doc.filename
/       / td
/       /   = "#{time_ago_in_words(doc.created_at)} ago"
/       / td= link_to '×', document_path(doc.id), method: :delete

/ .spacer.large

/ h2 Completed Uploads

/ table.table.table-bordered.table-striped: tbody
/   - if @completed_docs.empty?
/     p You haven't uploaded any documents yet.
/   - @completed_docs.each do |doc|
/     tr
/       td= doc.filename
/       / td
/       /   a href="#""#{doc.attachment.url}"
/       /     - if doc.kind == 'Parameters'
/       /       i.fa.fa-file-text.right-spacer
/       /     - else
/       /       i.fa.fa-file-code-o.right-spacer
/       /     = doc.filename
/       / td
/       /   = "#{time_ago_in_words(doc.created_at)} ago"
/       / td= link_to '×', document_path(doc.id), method: :delete
