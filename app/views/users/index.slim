p
  b= 'Total number of users: '
  = User.count

table.table.table-bordered.table-striped
  tr
    th
    th Name
    th Document Count
    th Sessions Count
    th: .pull-right Delete
    th
  - @users.each do |user|
    tr
      td
      td= link_to user.name, user
      td= user.documents.count
      td= user.sessions.count
      - if user.admin?
        td: .pull-right= 'Admin'
      - else
        td: .pull-right= link_to 'Ã—', user_path(user.id), method: :delete, data: { confirm: "Are you sure you want to delete #{user.name} and all of his/her associated data?" }
      td
